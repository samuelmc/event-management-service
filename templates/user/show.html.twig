{% extends 'layout/page.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_edit') }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
