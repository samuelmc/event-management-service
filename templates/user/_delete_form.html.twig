<form class="delete-form" method="post" action="{{ path('user_remove') }}" onsubmit="return confirm('Are you sure you want to remove this account?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="button alert">Delete my account</button>
</form>
